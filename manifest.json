{
  "manifest_version": 2,
  "name": "Web Scraper Helper",
  "version": "1.0",
  "description": "Select HTML elements and label them for easy web scraping",

  "permissions": ["activeTab", "storage"],

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png"
  }
}
