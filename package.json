{
  "name": "web-scraper-helper",
  "version": "1.0.0",
  "description": "Unit tests for Web Scraper Helper extension",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "jest-webextension-mock": "^4.0.0",
    "@types/jest": "^30.0.0",
    "jest-environment-jsdom": "^30.2.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": [
      "<rootDir>/tests/setup.js"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "<rootDir>/tests/__mocks__/styleMock.js"
    },
    "collectCoverageFrom": [
      "content_script.js",
      "popup.js",
      "!**/node_modules/**",
      "!**/tests/**"
    ]
  }
}
